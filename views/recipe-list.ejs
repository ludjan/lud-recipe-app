<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head-links.ejs') %>
    <title>Some app</title>
  </head>

  <body>
    <div class="wrapper">
      <%- include('partials/login-logout.ejs') %> <%-
      include('partials/add-new-recipe-button.ejs') %>

      <div class="container">
        <section>
          <h1>RECIPES</h1>

          <div id="recipe-feed">
            <% for (let i = 0; i < data.length; i++) { %>
            <p>
              <a href="<%= url %>/recipes/<%= data[i].id %>">
                <%= data[i].id %> <%= data[i].name %> <%= data[i].taste %>
              </a>
            </p>
            <% } %>
          </div>
        </section>
      </div>
    </div>

    <!-- <script type="text/javascript" src="/static/js/animation.js"></script> -->
  </body>
</html>
